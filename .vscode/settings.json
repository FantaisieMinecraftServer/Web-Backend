{
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "black-formatter.args": ["--line-length=120"],
  "flake8.args": [
    "--max-line-length=120",
    "--max-complexity=10",
    "--ignore=E203,W503,C901"
  ]
}
